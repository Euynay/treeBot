<launch>

    <!-- 设置地图的配置文件 -->
    <!--arg name="map" default="playpen_map.yaml" /-->

    <!-- 运行地图服务器，并且加载设置的地图-->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find husky_navigation)/maps/my_map.yaml"/>

    <!-- 运行move_base节点 -->
    <include file="$(find husky_navigation)/launch/move_base.launch"/>

    <!--- Run gmapping -->
    <include file="$(find husky_navigation)/launch/gmapping.launch" />

    <!-- 启动AMCL节点 -->
    <include file="$(find husky_navigation)/launch/amcl.launch" />


    <!-- 启动AMCL节点 -->
    <include file="$(find husky_gazebo)/launch/husky_playpen.launch" />
    
    
    <!-- 对于虚拟定位，需要设置一个/odom与/map之间的静态坐标变换 -->
    <node pkg="tf" type="static_transform_publisher" name="map_odom_broadcaster" args="0 0 0 0 0 0 /map /odom 100" />

    <!-- 运行rviz 
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find husky_viz)/rviz/robot.rviz"/>
-->
</launch>

